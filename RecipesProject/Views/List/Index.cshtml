    }
    .recipe-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Spațiu între divuri */
        font-family: 'Dancing Script', cursive;
    }

    .text{
        font-family: 'Dancing Script', cursive;
        text-align: center;
        font-size: 70px;
        color: #003300;
    }

    .buton{
        border-radius: 10px;
        padding: 3px;
        background-color:antiquewhite;
        border-color: antiquewhite;
    }

    .butondel{
        background-color: #BECFC0;

