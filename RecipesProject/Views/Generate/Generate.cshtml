@{
    ViewData["Title"] = "Generate Recipe";
}

<h1>Generate Recipe</h1>

<form asp-controller="Generate" asp-action="Generate" method="post">
    <div class="form-group">
        <label for="ingredient1">Ingredient 1:</label>
        <input type="text" class="form-control" id="ingredient1" name="ingredient1">
    </div>
    <div class="form-group">
        <label for="ingredient2">Ingredient 2:</label>
        <input type="text" class="form-control" id="ingredient2" name="ingredient2">
    </div>
    <div class="form-group">
        <label for="ingredient3">Ingredient 3:</label>
        <input type="text" class="form-control" id="ingredient3" name="ingredient3">
    </div>
    <button type="submit" class="btn btn-primary">Generate Now</button>
</form>
