@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Saved Recipes";
}

<h1>Saved Recipes</h1>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var recipe in Model)
        {
            <pre>@recipe.Description</pre>
        }
    </ul>
}
else
{
    <p>No recipes saved yet.</p>
}
